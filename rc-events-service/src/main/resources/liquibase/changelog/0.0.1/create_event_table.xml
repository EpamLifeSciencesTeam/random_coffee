<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <include file="../properties.xml" relativeToChangelogFile="true"/>

    <changeSet id="create_event_table" author="patokov">
        <createTable tableName="event">
            <column name="id" type="${uuid.type}"/>
            <column name="name" type="${64_length_text.type}"/>
            <column name="description" type="${text.type}"/>
            <column name="event_date" type="${timestamp_with_time_zone.type}"/>
            <column name="create_at" type="${timestamp_with_time_zone.type}"/>
            <column name="author" type="${64_length_text.type}"/>
        </createTable>
        <addPrimaryKey constraintName="event_pk" tableName="event" columnNames="id"/>
        <addNotNullConstraint constraintName="event_name_nn" tableName="event" columnName="name"/>
        <addNotNullConstraint constraintName="event_description_nn" tableName="event" columnName="description"/>
        <addNotNullConstraint constraintName="event_date_nn" tableName="event" columnName="event_date"/>
        <addNotNullConstraint constraintName="creation_event_date_nn" tableName="event" columnName="create_at"/>
        <addNotNullConstraint constraintName="author_event_nn" tableName="event" columnName="author"/>
    </changeSet>
</databaseChangeLog>

